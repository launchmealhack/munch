<!DOCTYPE html>
<html>
<head>
  <title>Munch</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"></script>
</head>
<body>
	<div class="container">
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<button id="menu" class = "pull-left" data-toggle = "collapse" data-target =".navHeaderCollapse">
				<span class = "glyphicon glyphicon-th-list"></span>
			</button>
			<h4 id="title" class="pull-left"><strong><a href="/videos/welcome">MUNCH </a></h4>
			<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>		
		</nav>
		<div id="sidr">
			<ul>
				<li>one</li>
				<li>two</li>
				<li>three</li>
			</ul>
		</div>
		
		<div id="select_bar" class="col-md-12 col-xs-12">
			<div class="row">
				<form class="form-inline" role="form">
					<div class="form-group col-md-5 col-xs-4">
						<label class="sr-only" for="select_category">Category</label>
						<select id="select_category" class="col-xs-2 form-control input-lg" name="dropdown_category">
							<option>Trending</option>
							<option>Latest</option>
							<option>Following</option>
						</select>
					</div>
					<div id="meals_in" class="form-group col-md-2 col-xs-2">	
						<span class="meals_in_font"><strong>Meals In</strong></span>
					</div>
					<div class="form-group col-md-5 col-xs-4">
						<label class="sr-only" for="select_distance">Distance</label>
						<select id="select_distance" class="col-xs-2 form-control input-lg" name="dropdown_category">
							<option>5 miles</option>
							<option>10 miles</option>
							<option>15 miles</option>
							<option>20 miles</option>
						</select>
					</div>
					<div class="form-group col-xs-7">
					<!-- fix break -->
					</div>
				</form>
			</div>
		</div>

		<%= yield %>
	</div>

</body>
</html>
